@* Form qui permet de modifier un article *@

@model Article

@{
    ViewData["Title"] = "Edit";
}

<h2>Editer l'article</h2>
<hr />

@using (Html.BeginForm("Enregistrer", "Article"))
{
   @Html.HiddenFor(j=>j.Id)
   <div class="form-group">
@Html.LabelFor(j => j.Titre)
@Html.TextBoxFor(j => j.Titre, new { @class= "form-control"})
   </div>
   <div class="form-group">
@Html.LabelFor(j => j.Illustration)
@Html.TextBoxFor(j => j.Illustration, new { @class= "form-control"})
   </div>
   <div class="form-group">
@Html.LabelFor(j => j.CategorieId)
@Html.TextBoxFor(j => j.CategorieId, new { @class= "form-control"})
   </div>
    <div class="form-group">
@Html.LabelFor(j => j.Texte)
@Html.TextAreaFor(j => j.Texte, new { @class= "form-control largeTextBox"}) 
@* Le textAREA permet d'avoir un champ d'input de texte plus grand et adaptatif à la quantité d'info rentré. Preferable que textbox *@
   </div>

   <br>
  <button type="submit" class="btn btn-primary">Enregistrer</button>

}
